# Aliaseses
alias ls='ls -alF --color=auto'
alias cls=clear
alias md=mkdir
alias svc=systemctl
alias logs="journalctl -xefu"
alias cports='lsof -i -P -n | grep LISTEN'
alias bounce="systemctl daemon-reload"
alias doc=docker
alias cpus=lscpu

# Functions
function cport() {
        lsof -i -P -n | grep $1
}
function tcp() {
  tcpdump -ni any port | grep $1
}

